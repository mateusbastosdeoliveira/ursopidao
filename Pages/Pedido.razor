</div>

<div style="display:flex; justify-content:center; width:100%;">
	<h1>Olá, chefe</h1>
</div>

<div style="display:flex; justify-content:center; width:100%;">
	<h2>Poderia me dar um aumento?</h2>
</div>
<br />
<div style="display:flex; justify-content:space-evenly; width:100%;flex-direction:row;">
	<MudButton Variant="Variant.Filled" Color="Color.Success">@txtBtnSim</MudButton>
	<MudButton Variant="Variant.Filled" Color="@corBtnNao" OnClick="funcBtnNao">@txtBtnNao</MudButton>
</div>




@code {
	public string txtBtnSim = "SIM";
	public string txtBtnNao = "NÃO";

	MudBlazor.Color corBtnNao = MudBlazor.Color.Secondary;

	public void funcBtnNao(){
		if (txtBtnNao == "NÃO") { txtBtnNao = "YES"; corBtnNao = MudBlazor.Color.Success; }
	}

}
